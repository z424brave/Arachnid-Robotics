{
    "compilerOptions": {
        "declaration": true,
        "inlineSources": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "release",
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}
